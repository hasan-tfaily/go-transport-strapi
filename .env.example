# Strapi Environment Variables
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=production

# Server Configuration
HOST=0.0.0.0
PORT=1337

# Database Configuration
# Options: sqlite, mysql, postgres
DATABASE_CLIENT=sqlite

# SQLite Configuration (default)
DATABASE_FILENAME=.tmp/data.db

# MySQL Configuration (if DATABASE_CLIENT=mysql)
# DATABASE_HOST=localhost
# DATABASE_PORT=3306
# DATABASE_NAME=strapi
# DATABASE_USERNAME=strapi
# DATABASE_PASSWORD=your_password_here
# DATABASE_SSL=false
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10

# PostgreSQL Configuration (if DATABASE_CLIENT=postgres)
# DATABASE_URL=postgresql://username:password@localhost:5432/strapi
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=strapi
# DATABASE_USERNAME=strapi
# DATABASE_PASSWORD=your_password_here
# DATABASE_SCHEMA=public
# DATABASE_SSL=false
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10

# Strapi Security Keys
# Generate these using: openssl rand -base64 32
# You need 4 APP_KEYS (comma-separated)
APP_KEYS=toBeModified1,toBeModified2,toBeModified3,toBeModified4
ADMIN_JWT_SECRET=toBeModified
API_TOKEN_SALT=toBeModified
TRANSFER_TOKEN_SALT=toBeModified
ENCRYPTION_KEY=toBeModified

# Strapi Flags
FLAG_NPS=true
FLAG_PROMOTE_EE=true

# Database Connection Timeout (milliseconds)
DATABASE_CONNECTION_TIMEOUT=60000
